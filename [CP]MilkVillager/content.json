{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Format": "2.0.0",
  "ConfigSchema": {
    "ExtraDialogue": {
      "AllowValues": "true, false",
      "Default": "true"
    },
    "Quests": {
      "AllowValues": "true, false",
      "Default": "true"
    },
    "MTVPlayerGender": {
      "AllowValues": "Male, Female, Herm, Ace",
      "Default": "Female"
    }
  },
  "DynamicTokens": [
    {
      "Name": "GenderSwitch",
      "Value": "P", //Male.
      "Update": "OnLocationChange, OnTimeChange"
    },
    {
      "Name": "GenderSwitch",
      "Value": "V", //Female.
      "When": {
        "HasFlag": "MTV_Vagina"
      },
      "Update": "OnLocationChange, OnTimeChange"
    },
    {
      "Name": "GenderSwitch",
      "Value": "A", //Ace.
      "When": {
        "HasFlag": "MTV_Ace"
      },
      "Update": "OnLocationChange, OnTimeChange"
    },
    {
      "Name": "GenderSwitch",
      "Value": "H", //Herm.
      "When": {
        "HasFlag": "MTV_Herm"
      },
      "Update": "OnLocationChange, OnTimeChange"
    },
    {
      "Name": "GenderSwitch",
      "Value": "P", //Male.
      "When": {
        "HasFlag": "MTV_Penis"
      },
      "Update": "OnLocationChange, OnTimeChange"
    }

  ],
